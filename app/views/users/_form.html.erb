<div class="signup-form">

  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :username, id: :user_username, placeholder: "Username", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.password_field :password, id: :user_password, placeholder: "Password", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, placeholder: "Confirm Password", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.text_field :name, id: :user_name, placeholder: "Full Name", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.text_field :mother_name, id: :user_mother_name, placeholder: "Mother's Name", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.text_field :father_name, id: :user_father_name, placeholder: "Father's Name", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.label :dob %>
      <%= form.date_select :dob, id: :user_dob, placeholder: "Date of birth", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.number_field :aadhar_no, id: :user_aadhar_no, placeholder: "Aadhar Card Number", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.text_field :pan_no, id: :user_pan_no, placeholder: "Pan Card Number", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.number_field :phno, id: :user_phno, placeholder: "Contact Number", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.text_field :adress, id: :user_adress, placeholder: "Permanent Address", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

    <div class="field">
      <%= form.text_field :nationality, id: :user_nationality, placeholder: "Nationality", style: 'width: 100%; border-radius:2px; border-shadow:none; border:solid 1px; margin:1.8px;'   %>
    </div>

        <div class="field">
          <%= form.label :photo %>
          <%= form.file_field :photo, id: :user_photo %>
        </div>

        <div class="field">
          <%= form.label :sign %>
          <%= form.file_field :sign, id: :user_sign %>
        </div>

    <div class="actions">
      <%= form.submit "Sign Up", class: 'button', style:  'color:white; width: 100%; border-radius:2px; background-color:#1190DA; padding:5px; border-shadow:none; border:solid 1px blue; margin:1.8px;' %>
    </div>


  <% end %>

</div>
